{
    "name": "spatie/laravel-welcome-mail",
    "description": "Send a welcome mail to new users",
    "keywords": [
        "spatie",
        "laravel-welcome-mail"
    ],
    "homepage": "https://github.com/spatie/laravel-welcome-mail",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "illuminate/auth": "^6.5",
        "illuminate/mail": "^6.5",
        "illuminate/queue": "^6.5"
    },
    "require-dev": {
        "orchestra/testbench": "^4.3",
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\WelcomeMail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\WelcomeMail\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\WelcomeMail\\WelcomeMailServiceProvider"
            ]
        }
    }
}
